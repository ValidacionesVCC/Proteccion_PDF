services:
  - type: web
    name: Proteccion_PDF
    env: python
    plan: free
    buildCommand: |
      pip install --upgrade pip
      pip install -r requirements.txt
    startCommand: gunicorn Proteccion_PDF.wsgi:application --bind 0.0.0.0:$PORT
    envVars:
      - key: PYTHONUNBUFFERED
        value: "1"
      # Opcional: puedes definir DJANGO_SECRET_KEY aqu√≠ si quieres
      # - key: DJANGO_SECRET_KEY
      #   value: "tu-clave-secreta-segura"
